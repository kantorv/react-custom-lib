    "typescript": "^5.6.2",
    "web-vitals": "^4.2.3"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:storybook/recommended"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "release-it": {
    "git": {
      "commit": true,
      "tag": true,
      "push": true
    },
    "github": {
      "release": true,
      "releaseName": "Release ${version}",
      "autoGenerate": true,
      "preRelease": false,
      "draft": false
    },
    "npm": {
      "skipChecks": true,
      "publish": true
    }
  }
